<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WhyEco"
    tools:showIn="@layout/activity_why_eco">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:lineSpacingExtra="12sp"
            android:text="Why"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo" />
    </TableRow>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="410dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="100dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/philips" />

            <Button
                android:id="@+id/PlayButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="Play"
                app:srcCompat="@drawable/philips"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="237dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="Benefits"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.426"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.008" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/benefit1"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="385dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="160dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/benefit4"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="266dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:text="Change filter every 2 years "
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="For each filter\n we donate one"
                    android:textAlignment="center"
                    tools:text="For each filter\n we donate one" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/benefit2" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/benefit5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:text="Eliminate the expense\n in garrafones"
                    android:textAlignment="center"
                    tools:text="Eliminate the expense\n in garrafones" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Improve the taste\n of water"
                    android:textAlignment="center"
                    tools:text="Improve the taste\n of water" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/benefit6" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/benefit3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="279dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:text="Capacity of 20L water"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/environmental_friendly"
                    android:textAlignment="center" />
            </TableRow>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>